<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <tittle>Snake</tittle>
    </head>
    <body>
        <canvas id="game-canvas" width="400" height="400"></canvas>
        <script>
            let canvas = document.getElementById('game-canvas');
            let ctx = canvas.getContext('2d');

            let tileSize = 20;
            let rows = canvas.height / tileSize;
            let cols = canvas.width / tileSize;

            let snake = [
                { x: 10, y: 10},
                { x: 9, y: 10},
                { x: 8, y: 10}
            ]

            let dx = 1;
            let dy = 0;

            let foodCoordinates = {
                x: Math.floor(Math.random() * cols),
                y: Math.floor(Math.random() * rows)
            };

            let score = 0;

            let gameOver = false;

            function drawGrid() {
                for (let x = 0; x < cols; x++) {
                    for (let y = 0; y < rows; y++) {
                        ctx.strokeStyle = 'lightgrey';
                        ctx.strokeRect(x * tileSize, y * tileSize, tileSize, tileSize);
                    }
                }
            }

            function drawSnake() {
                ctx.fillStyle = 'green';
                for (let i = 0; i < snake.length; i++) {
                    let segment = snake[i];
                    ctx.fillRect(segment.x * tileSize, segment.y * tileSize, tileSize, tileSize);
                }
            }

            function drawFood() {
                ctx.fillStyle = 'red';
                ctx.fillRect(foodCoordinates.x * tileSize, foodCoordinates.y * tileSize, tileSize, tileSize);
            }

            function drawScore() {
                ctx.fillStyle = 'black';
                ctx.font = '20px Arial';
                ctx.fillRect('Score: ' + score, 20, 30);
            }

            function moveSnake() {
                let head = { x: snake[0].x + dx, y: snake[0].y + dy };

                snake.unshift(head);

                if (head.x === foodCoordinates.x && head.y === foodCoordinates.y) {
                    score++;
                    foodCoordinates = {
                        x: Math.floor(Math.random() * cols),
                        y: Math.floor(Math.random() * rows)
                    }
                } else {
                    snake.pop();
                }

                if (head.x < 0 || head.x >= cols || head.y < 0 || head.y >= rows ) { 
                    gameOver = true;
                    return;
                }

                for (let i = 1; i < snake.length; i++) {
                    if (head.x === snake[i].x && head.y === snake[i].y) {
                        gameOver = true;
                        return;
                    }
                }

            }

            document.addEventListener('keydown', function(event) {
                switch (event.key) {
                    case 'ArrowUp':
                        if (dy === 0) {
                            dx = 0;
                            dy = -1;
                        }
                        break;
                    case 'ArrowDown':
                         if (dy === 0) {
                            dx = 0;
                            dy = 1;
                        }
                        break;
                    case 'ArrowLeft':
                        if (dx === 0) {
                            dx = -1;
                            dy = 0;
                        }
                        break;
                    case 'ArrowRight':
                        if (dx === 0) {
                            dx = 1;
                            dy = 0;
                        }
                        break;
                }
            })

            document.addEventListener('keydown', function(event) {
                if(gameOver && event.key === 'Enter') {
                    resetGame();
                }
            });

            function clearCanvas() {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
            }

            function update() {
                if (!gameOver) {
                    clearCanvas();
                    drawGrid();
                    moveSnake();
                    drawSnake();
                    drawFood();
                    drawScore();
                } else {
                    ctx.fillStyle = 'red';
                    ctx.font = '40px Arial';
                    ctx.fillText('Game Over', canvas.width / 4, canvas.height / 2);
                    ctx.fillText('Score: ' + score, canvas.width / 4, canvas.height / 2 + 50);
                }
            }

            function resetGame() {
                snake = [
                { x: 10, y: 10},
                { x: 9, y: 10},
                { x: 8, y: 10}
            ];
            dx = 1;
            dy = 0;
            score = 0;
            speed = 0;
            foodCoordinates = {
                x: Math.floor(Math.random() * cols),
                y: Math.floor(Math.random() * rows)
            };
            gameOver = false;
            update();
            }

            setInterval(update, 100);

            drawGrid();
        </script>
    </body>
</html>